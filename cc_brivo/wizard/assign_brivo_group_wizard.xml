<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="assign_brivo_group_wizard" model="ir.ui.view">
    <field name="name">assign.brivo.group.wizard</field>
    <field name="model">assign.brivo.group.wizard</field>
    <field name="active">True</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="sale_order_template_id" readonly="1" force_save="1"/>
            <field name="brivo_group_id"/>
          </group>
        </sheet>

        <footer>
          <button 
            type="object"
            name="action_confirm"
            string="Confirm"
            confirm="Are you sure you want to change the Brivo group for this membership? Doing so will switch all members with this membership to the new Brivo group."
            class="btn btn-primary"
          />
          <button
            string="Cancel"
            class="btn btn-secondary"
            special="cancel"
          />
        </footer>
      </form>
    </field>
  </record>
</odoo>