<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="manage_suspended_status_wizard" model="ir.ui.view">
    <field name="name">manage.suspended.status.wizard</field>
    <field name="model">manage.suspended.status.wizard</field>
    <field name="active">True</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="partner_id" readonly="1" force_save="1"/>
            <field name="is_brivo_suspended" string="Is Suspended on Brivo" widget="boolean_toggle" readonly="1"/>
          </group>
        </sheet>

        <footer>
          <button 
            type="object"
            name="action_toggle_suspension"
            string="Toggle Suspended Status"
            confirm="Are you sure you want to change this member's suspended status?"
            class="btn btn-primary"
          />
          <button
            string="Cancel"
            class="btn btn-secondary"
            special="cancel"
          />
        </footer>
      </form>
    </field>
  </record>
</odoo>